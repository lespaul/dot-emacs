BASEDIR=`dirname $(dirname $(which $0))`

if [ -z "$PYTHON" ] ; then
  PYTHON=`which python2`
fi

if [ -z "$PYTHON" ] ; then
  PYTHON=python
fi

PYTHONPATH=$BASEDIR/doc/extension $PYTHON doc/extension/eclim/sphinx "$@"
